<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

	
		    <TextView
		        android:id="@+id/projmot_problems_title"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentTop="true"
		        android:layout_centerHorizontal="true"
		        android:text="@string/projmot_problems_title"
		        android:textAppearance="?android:attr/textAppearanceLarge" />	
		        	
		    <TextView
		        android:id="@+id/projmot_problems_diff"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/projmot_problems_title"
		        android:layout_centerHorizontal="true"
		        android:text="@string/projmot_problems_diff" />	 		    
		    
			<Button
		        android:id="@+id/HorizontalProjectilesButton"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/projmot_problems_diff"
		        android:layout_marginTop="20dp"
		        android:layout_centerHorizontal="true"
		        android:text="@string/HorizontalProjectilesButton"
		        android:onClick="goToHorizontalProjectilesScreen" />		    
		    
			<Button
		        android:id="@+id/AngularProjectilesButton"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/HorizontalProjectilesButton"
		        android:layout_centerHorizontal="true"
		        android:text="@string/AngularProjectilesButton"
		        android:onClick="goToAngularProjectilesScreen" />		
		        		
	</RelativeLayout>
</ScrollView>