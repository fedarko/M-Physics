<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
	
	    <TextView
	        android:id="@+id/credits_titletext"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:text="@string/credits_titletext"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	    
	    <TextView
	        android:id="@+id/credits_version"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/credits_titletext"
	        android:layout_centerHorizontal="true"
	        android:text="@string/credits_version" />
	    
	    <TextView
	        android:id="@+id/credits_author_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/credits_version"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="15dp"
	        android:text="@string/credits_author_title"
	        android:textAppearance="?android:attr/textAppearanceMedium" />
	    
	    <TextView
	        android:id="@+id/credits_author"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/credits_author_title"
	        android:layout_centerHorizontal="true"
	        android:text="@string/credits_author" />

	    <TextView
	        android:id="@+id/credits_acknowledgments_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/credits_author"
	        android:layout_marginTop="20dp"
	        android:layout_centerHorizontal="true"
	        android:text="@string/credits_acknowledgments_title"
	        android:textAppearance="?android:attr/textAppearanceMedium" />	
	    
	    <TextView
	        android:id="@+id/credits_acknowledgments"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/credits_acknowledgments_title"
	        android:layout_centerHorizontal="true"
	        android:text="@string/credits_acknowledgments" />   

	    <TextView
	        android:id="@+id/credits_source_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/credits_acknowledgments"
	        android:layout_marginTop="20dp"
	        android:layout_centerHorizontal="true"
	        android:text="@string/credits_source_title"
	        android:textAppearance="?android:attr/textAppearanceMedium" />	
	    
	    <TextView
	        android:id="@+id/credits_source"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/credits_source_title"
	        android:layout_centerHorizontal="true"
	        android:text="@string/credits_source" /> 
	    
	</RelativeLayout>
</ScrollView>