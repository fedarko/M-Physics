<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
	
	    <TextView
	        android:id="@+id/units_titletext"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:text="@string/units_titletext"
	        android:textAppearance="?android:attr/textAppearanceLarge" />

	    <TextView
	        android:id="@+id/units_explanation"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/units_titletext"
	        android:layout_centerHorizontal="true"
	        android:text="@string/units_explanation" />				

	    <TextView
	        android:id="@+id/units_explanation_2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/units_explanation"
	        android:layout_marginTop="20dp"
	        android:layout_centerHorizontal="true"
	        android:text="@string/units_explanation_2" />	
	        
	    <TextView
	        android:id="@+id/units_si_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/units_explanation_2"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="20dp"
	        android:text="@string/units_si_title"
	        android:textAppearance="?android:attr/textAppearanceLarge" />	    

	    <TextView
	        android:id="@+id/units_si_explanation"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/units_si_title"
	        android:layout_centerHorizontal="true"
	        android:text="@string/units_si_explanation" />	

	    <TextView
	        android:id="@+id/units_si_list"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/units_si_explanation"
	        android:layout_marginTop="10dp"
	        android:layout_marginLeft="5dp"
	        android:layout_alignParentLeft="true"
	        android:text="@string/units_si_list" />

	    <TextView
	        android:id="@+id/units_si_derivations"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/units_si_list"
	        android:layout_marginTop="20dp"
	        android:layout_centerHorizontal="true"
	        android:text="@string/units_si_derivations" />	
	        	        	    							   		    	    	    	
	</RelativeLayout>
</ScrollView>