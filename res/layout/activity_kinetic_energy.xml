<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
	
	    <TextView
	        android:id="@+id/ke_titletext"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:text="@string/ke_titletext"
	        android:textAppearance="?android:attr/textAppearanceLarge" />

	    <TextView
	        android:id="@+id/ke_intro"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/ke_titletext"
	        android:layout_centerHorizontal="true"
	        android:text="@string/ke_intro" />

	    <TextView
	        android:id="@+id/ke_trans_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/ke_intro"
	        android:layout_marginTop="20dp"
	        android:layout_centerHorizontal="true"
	        android:text="@string/ke_trans_title"
	        android:textAppearance="?android:attr/textAppearanceMedium" />	    

	    <TextView
	        android:id="@+id/ke_trans_desc"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/ke_trans_title"
	        android:layout_centerHorizontal="true"
	        android:text="@string/ke_trans_desc" />

	    <TextView
	        android:id="@+id/ke_rot_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/ke_trans_desc"
	        android:layout_marginTop="20dp"
	        android:layout_centerHorizontal="true"
	        android:text="@string/ke_rot_title"
	        android:textAppearance="?android:attr/textAppearanceMedium" />	    

	    <TextView
	        android:id="@+id/ke_elastic_desc"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/ke_rot_title"
	        android:layout_centerHorizontal="true"
	        android:text="@string/ke_rot_desc" />		
	        		    	    		      	    	
	</RelativeLayout>
</ScrollView>
