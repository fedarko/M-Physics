<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
	
	    <TextView
	        android:id="@+id/accelinfo_titletext"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:layout_centerHorizontal="true"
	        android:text="@string/accelinfo_titletext"
	        android:textAppearance="?android:attr/textAppearanceLarge" />

	    <TextView
	        android:id="@+id/accelinfo_desc_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="10dp"
	        android:layout_below="@+id/accelinfo_titletext"
	        android:text="@string/accelinfo_desc_title"
	        android:textAppearance="?android:attr/textAppearanceMedium" />	    
	    
	    <TextView
	        android:id="@+id/accelinfo_headertext"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/accelinfo_desc_title"
	        android:layout_centerHorizontal="true"
	        android:text="@string/accelinfo_headertext" />
	    
	    <ImageView
	        android:id="@+id/phone_accelerometer_diagram"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/accelinfo_headertext"
	        android:layout_marginTop="10dp"
	        android:layout_centerHorizontal="true"
	        android:src="@drawable/phone_accelerometer_diagram"
	        android:contentDescription="@string/ImageErrorMsg" />

	    <TextView
	        android:id="@+id/accelinfo_2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/phone_accelerometer_diagram"
	        android:layout_marginTop="10dp"
	        android:layout_centerHorizontal="true"
	        android:text="@string/accelinfo_2" />

	    <TextView
	        android:id="@+id/accelinfo_grav_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="10dp"
	        android:layout_below="@+id/accelinfo_2"
	        android:text="@string/accelinfo_grav_title"
	        android:textAppearance="?android:attr/textAppearanceMedium" />	 	    
	    
	    <TextView
	        android:id="@+id/accelinfo_4"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/accelinfo_grav_title"
	        android:layout_marginTop="10dp"
	        android:layout_centerHorizontal="true"
	        android:text="@string/accelinfo_4" />

	    <TextView
	        android:id="@+id/accelinfo_uses_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="10dp"
	        android:layout_below="@+id/accelinfo_4"
	        android:text="@string/accelinfo_uses_title"
	        android:textAppearance="?android:attr/textAppearanceMedium" />	 	    
	    
	    <TextView
	        android:id="@+id/accelinfo_3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/accelinfo_uses_title"
	        android:layout_marginTop="10dp"
	        android:layout_centerHorizontal="true"
	        android:text="@string/accelinfo_3" />
	    		    	         
	</RelativeLayout>
</ScrollView>